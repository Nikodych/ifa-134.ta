<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "All Tests">

    <test name = "CheckoutPageTest">
        <classes>
            <class name = "com.softserveinc.ita.CheckoutPageTest">
                <methods>
                    <include name="verifyCheckoutPageFunctionalityTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name = "FilterModalTest">
        <classes>
            <class name = "com.softserveinc.ita.FilterModalTest">
                <methods>
                    <include name="verifyPriceSortingFunctionality" />
                </methods>
            </class>
        </classes>
    </test>

    <test name = "SearchTest">
        <classes>
            <class name = "com.softserveinc.ita.SearchTest">
                <methods>
                    <include name="verifySearchResultsTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name = "BasketModalTest">
        <classes>
            <class name = "com.softserveinc.ita.BasketModalTest">
                <methods>
                    <include name="verifyAddingProductToCartTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name = "SideMenuTest">
        <classes>
            <class name = "com.softserveinc.ita.SideMenuTest">
                <methods>
                    <include name="verifyCityChangingTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name = "HomePageTest">
        <classes>
            <class name = "com.softserveinc.ita.HomePageTest">
                <methods>
                    <include name="verifyCategoryTransitionTest" />
                    <include name="verifyCategoryTransitionThroughDropdownTest" />
                    <include name="verifyLanguageSwitchingTest" />
                </methods>
            </class>
        </classes>
    </test>

</suite>